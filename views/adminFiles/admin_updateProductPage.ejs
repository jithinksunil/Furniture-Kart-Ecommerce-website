<body>
    
    <div class="container col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="row g-0 align-items-center justify-content-center">
            <div class="col-lg-6 mb-lg-0 py-5">
                <div class="card cascading-right"
                    style="background: hsla(0, 0%, 100%, 0.55); backdrop-filter: blur(30px); ">
                    <div class="card-body shadow-5 text-center">
                        <h2 class="fw-bold">Update Product</h2>
                        <form action="/admin/update/product/completed" method="post" enctype="multipart/form-data">
    
                            <div class="form-outline mt-3">
                                <label class="form-label" for="form3Example1">Product Name</label><br>
                                <input type="text" id="form3Example1" name="productName" class="form-control" />
                            </div>
                            <div>
                                <label class="form-label" for="form3Example1">Select Category</label><br>
                                <select name="catagoryName" id="form3Example1" class="form-control" >
                                    <% catData.forEach((item)=>{
                                        %><option><%= item.catName %></option><%
                                    })%>
                                </select>
                                
                            </div>
                            <div class="form-outline mt-3">
                                <label class="form-label" for="form3Example1">Description</label><br>
                                <input type="text" id="form3Example1" name="description" class="form-control" />
                            </div>
                            <div class="form-outline mt-3">
                                <label class="form-label" for="form3Example1">Rate</label><br>
                                <input type="number" id="form3Example1" name="rate" class="form-control" />
                            </div>
                            <div class="form-outline mt-3">
                                <label class="form-label" for="form3Example1">Stock</label><br>
                                <input type="number" id="form3Example1" name="stock" class="form-control" />
                            </div>
                            <div class="form-outline mt-3">
                                <label class="form-label" for="form3Example1">Choose your image</label><br>
                                <input type="file" name="poductImage" class="form-control" multiple/>
    
                            </div>
    
                            <div class="form-outline mt-3">
                                <input type="submit" value="Submit" class="btn btn-primary btn-block mb-4">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
