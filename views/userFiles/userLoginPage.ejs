<head>
  <link rel="stylesheet" href="/user/css/userLoginPage.css" />
  <style>
    .signinContainer {
      min-height: 500px;
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      padding: 0 !important;
      justify-content: center;
      align-items: center;
    }
    @media (max-width: 765px) {
      .signinContainer {
        display: flex;
      }
      .image {
        display: none;
      }
    }
  </style>
</head>
<div
  style="
    display: flex;
    justify-content: center;
    padding: 5px;
    min-height: 100vh;
    align-items: center;
    padding-top: 50px;
    padding-bottom: 50px;
  "
>
  <div class="container card signinContainer" style="height: fit-content">
    <img class="image" src="/user/images/userLoginImage.jpg" />
    <div class="signin-form">
      <h2 class="form-title" style="text-align: center">Sign in</h2>
      <form
        action="/login/validation"
        method="POST"
        class="register-form"
        id="login-form"
      >
        <div class="form-group">
          <label for="your_name"
            ><i class="zmdi zmdi-account material-icons-name"></i
          ></label>
          <input
            type="email"
            name="email"
            id="your_name"
            placeholder="Email"
            required
          />
        </div>
        <div class="form-group">
          <label for="your_pass"><i class="zmdi zmdi-lock"></i></label>
          <input
            type="password"
            name="password"
            id="your_pass"
            placeholder="Password"
            required
          />
        </div>
        <% if(warning){%>
        <p style="color: black">Wrong email or password</p>
        <%}%>
        <div class="form-group form-button text-center">
          <input
            type="submit"
            name="signin"
            id="signin"
            class="form-submit"
            value="Log in"
          />
        </div>
        <a href="/registration" class="signup-image-link"
          >New user? Create account</a
        >
        <a href="/forgotpassword" class="signup-image-link">Forgot password?</a>
      </form>
    </div>
  </div>
</div>
