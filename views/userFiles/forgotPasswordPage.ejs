<head>
  <link rel="stylesheet" href="/user/css/userLoginPage.css" />
  <style>
    .signinContainer {
      min-height: 400px;
      display: flex;
      padding: 0 !important;
      justify-content: center;
    }
    @media (max-width: 765px) {
      .image {
        display: none;
      }
    }
  </style>
</head>
<body>
  <div
    style="
      display: flex;
      justify-content: center;
      padding: 5px;
      height: 100vh;
      align-items: center;
    "
  >
    <div class="container card signinContainer" style="height: fit-content">
      <div class="signin-form">
        <h2 class="form-title">Email</h2>
        <form
          action="/forgotpassword/otppage"
          class="register-form"
          id="login-form"
        >
          <div class="form-group">
            <input
              type="email"
              name="userEmail"
              id="your_name"
              placeholder="Enter registered email"
              required
            />
          </div>
          <% if(warning){%>
          <p style="color: black">User doesnot exists</p>
          <%}%>
          <div class="form-group form-button">
            <input
              type="submit"
              name="signin"
              id="signin"
              class="form-submit"
              value="Proceed"
            />
          </div>
        </form>
      </div>
    </div>
  </div>
</body>

