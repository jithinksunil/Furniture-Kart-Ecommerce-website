    .tiles-1:hover{
      transform:scale(1.1)
    }
    .tiles{
      justify-content: center;
      background-color: rgb(17, 19, 46);
      height:22rem;
      width:15rem;
    }
    .tiles:hover{
      transform:scale(1.1)
    }
    .innerClass{
      width:100%
    }
    a,p,h1,h2,li,button{
      color: rgb(127, 127, 127);
      font-weight: bold;
    }

