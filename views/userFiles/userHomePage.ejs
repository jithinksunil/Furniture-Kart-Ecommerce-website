<body>
  <div class="container-fluid px-0">
    <div id="navBarFinal">
      <%- include('./partials/navBarFinal')%>
    </div>
    <div style="z-index: 10;" id="navBarLeft">
      <%- include('./partials/navBarLeft')%>
    </div>
