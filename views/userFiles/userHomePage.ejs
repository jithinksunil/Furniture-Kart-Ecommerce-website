    <%}%>
  
    
  </div>
  </div>
  
  <%- include('./partials/footer')%>
  <script>
    var viewPortHeight=window.innerHeight
    window.onscroll = function(){myFunction()}
    window.onload=function(){myFunction()}
    function myFunction(){
      var currentOffset=window.pageYOffset
      if(currentOffset>=viewPortHeight*0.9){
        document.getElementById('navBarLeft').style.display = "block"
        document.getElementById('navBarFinal').style.display = "none"
      }else{
        document.getElementById('navBarLeft').style.display = "none"
        document.getElementById('navBarFinal').style.display = "block"
      }
    }
    

  </script>
