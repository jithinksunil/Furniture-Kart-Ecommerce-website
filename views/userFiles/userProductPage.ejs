<head>
    <link rel="stylesheet" type="text/css" href="/user/css/productDetailPage.css">
    <style>
        .searchBox{
          display: none !important;
        }
      </style>
</head>
<body>
    <%- include('./partials/navBarLeft')%>
    <div style="height:4vw"></div>

    <div class="container my-5">

        <div class="row" >
            
            <div class="col-md-5 card">
                <div class="main-img img-zoom-container" >
                        <figure class="zoom" onmousemove="zoom(event)" style="background-image: url('<%=productData?.productImage[0]?.cloudunaryUrl %>')">
                        <img  class="img-fluid" src="<%=productData?.productImage[0]?.cloudunaryUrl %>" >
                        </figure>
                </div>


            </div>

            <div class="col-md-7">
                <div class="main-description px-2">
                    <div class="category text-bold text-secondary">
                        Category:<%=productData.category%>
                    </div>
                    <div class="product-title text-bold my-3">
                        <%= productData.productName %>
                    </div>


                    <div class="price-area my-4">
                        
                        <p class="new-price text-bold mb-1"><span>
                            â‚¹ <%= productData.rate %>
                        </span></p>
                        

                    </div>


                        <div class="buttons d-flex my-5">
                            <div class="block">
                                <button id="cartButton" class="btn btn-dark btn-addtocart mx-2" style="width: 140px;" onclick="addToCart('<%= productData._id %>',1)"><i class="fa-solid fa-cart-plus"></i> Add to Cart</button>
                            </div>
                            
                            <div class="block">
                                <a href="/checkout?buyFrom=productPage&productId=<%= productData._id %>">
                                    <button class="btn btn-dark mx-2">Buy now</button>
                                </a>
                            </div>
                        </div>
                </div>

                    <div class="product-details my-4">
                        <p class="details-title text-color mb-1">Product Details</p>
                        <p class="description"></p>
                    </div>

                    <div class="product-details my-4">
                        <h5 class=" text-color mb-2 "><%= productData.description %></h5>
                    </div>
                    
                </div>

            </div>
        </div>
    </div>


    <%- include('./partials/footer') %>
    
    
    <script>
        //product zoom
        function zoom(e){
            var zoomer = e.currentTarget;
            e.offsetX ? offsetX = e.offsetX : offsetX = e.touches[0].pageX
            e.offsetY ? offsetY = e.offsetY : offsetX = e.touches[0].pageX
            x = offsetX/zoomer.offsetWidth*100
            y = offsetY/zoomer.offsetHeight*100
            zoomer.style.backgroundPosition = x + '% ' + y + '%';
        }

    </script>

</body>