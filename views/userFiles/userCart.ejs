<head>
  <link rel="stylesheet" href="/public/user/css/cart.css">
</head>
<body id="mainDivCart">
  <%- include('./partials/navBarLeft')%>
    <div style="height:4vw"></div>
    <section class="bg-light">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-12">
            <div class="card card-registration card-registration-2" style="border-radius: 15px;">
              <div class="card-body p-0">
                <div class="row g-0">
                  <div class="col-lg-8">
                    <div class="p-5">
                      <div class="d-flex justify-content-between align-items-center mb-5">
                        <h1 class="fw-bold mb-0 text-black">Shopping Cart</h1>
                        <h6 class="mb-0 text-muted"><%= cartCount %>items</h6>
                      </div>
                      <hr class="my-4">
                      <%for(let i=0;i<cartProducts.length;i++){%>
                         
                        <div class="row mb-4 d-flex justify-content-between align-items-center">
                          <div class="col-md-2 col-lg-2 col-xl-2">
                            <img
                            src="/products/images/<%= cartProducts[i].productDetails[0].productImage %>"
                              class="img-fluid rounded-3" alt="Cotton T-shirt">
                          </div>
                          <div class="col-md-3 col-lg-3 col-xl-3">
                            <h6 class="text-black mb-0"><%= cartProducts[i].productDetails[0].productName %></h6>
                          </div>
                          <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                            <button style="border: none;background-color: #d7d7d7;" onclick="amountChanger(-1*'<%=cartProducts[i].productDetails[0].rate %>','<%= i %>'); addToCart('<%= cartProducts[i].prod %>',-1)"> - </button>
                              <span id= "<%= cartProducts[i].prod %>"> <%= cartProducts[i].nos %> </span>
                            <button style="border: none;background-color: #d7d7d7;" onclick="amountChanger('<%=cartProducts[i].productDetails[0].rate %>','<%= i %>');addToCart('<%= cartProducts[i].prod %>',1)"> + </button>
                          </div>

                          <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                            <h6 class="mb-0">&#8377 <%=cartProducts[i].productDetails[0].rate %></h6>
                          </div>
                          <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                            <a href="/user/cart/removeitem?productId=<%= cartProducts[i].prod %>" class="text-muted"><i class="fas fa-times"></i></a>
                          </div>
                        </div>
                        <hr class="my-4">
                      <%}%>
                      
    
                      <div class="pt-5">
                        <h6 class="mb-0"><a href="#!" class="text-body"><i
                              class="fas fa-long-arrow-alt-left me-2"></i>Back to shop</a></h6>
                      </div>
                    </div>
                  </div>
                  <div class="col-lg-4 bg-grey">
                    <div class="p-5">
                      <h3 class="fw-bold mb-5 mt-2 pt-1">Summary</h3>
                      <hr class="my-4">
                      <%for(let i=0;i<cartProducts.length;i++){%>
                        <div class="d-flex justify-content-between mb-4">
                          <h6 class="text-uppercase"><%= cartProducts[i].productDetails[0].productName %></h6>
                          <h6 id="<%=i %>">&#8377 <%=(cartProducts[i].productDetails[0].rate)*(cartProducts[i].nos) %></h6>
                        </div>
                      <%}%>
                    
                      <hr class="my-4">
    
                      <div class="d-flex justify-content-between mb-5">
                        <h5 class="text-uppercase">Total amount</h5>
                        <h5  id="totalAmount">&#8377 <%= bill.price %></h5>
                      </div>
    
                      <a href="/user/checkout">
                        <button type="button" class="btn btn-dark btn-block btn-lg"
                        data-mdb-ripple-color="dark">Place order</button>
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  <%- include('./partials/footer') %>
</body>